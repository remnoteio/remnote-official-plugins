{
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "check-types": "tsc",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --color --progress --no-open",
    "build": "rm -rf dist && cross-env NODE_ENV=production webpack --color --progress && cp README.md dist && cd dist && zip -r ../PluginZip.zip ./*",
    "build-watch": "nodemon --watch 'src/**/* public/**/*' --exec \"npm run build\" -e '*'",
    "start": "http-server --cors -p 7000 dist -c-1",
    "sass": "sass --watch --style=compressed --no-source-map src/scss/App.scss:src/App.css"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/*"
    ]
  },
  "dependencies": {
    "@remnote/plugin-sdk": "^0.0.22",
    "@types/mustache": "^4.1.2",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.7.1",
    "dayjs": "^1.10.8",
    "debounce": "^1.2.1",
    "mermaid": "^9.3.0",
    "mini-css-extract-plugin": "^2.6.0",
    "nanoid": "^4.0.0",
    "nodemon": "^2.0.15",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.7",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.5",
    "@types/debounce": "^1.2.1",
    "@types/mermaid": "^8.2.9",
    "@types/node": "^12.12.5",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "copy-webpack-plugin": "^10.2.4",
    "cross-env": "^6.0.3",
    "esbuild-loader": "^2.13.1",
    "html-webpack-plugin": "^5.5.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.8",
    "prettier": "^2.8.3",
